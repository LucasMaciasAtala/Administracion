<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Administración</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary ">
        <div class="container">
            <div class="navbar-collapse">
                <ul class="navbar-nav">
                    <li>@Html.ActionLink("Administracion", "Index", "Home", routeValues: null,
                             htmlAttributes: new { @class = "navbar-brand", @id = "navbarColor01" })</li>
                    <li>@Html.ActionLink("Personas", "Index", "Personas", routeValues: null,
                             htmlAttributes: new { @class = "nav-link", @id = "navbarColor01" })</li> 
                    <li>@Html.ActionLink("Casas", "Index", "Casas", routeValues: null,
                             htmlAttributes: new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Restaurantes", "Index", "Restaurantes", routeValues: null,
                             htmlAttributes: new { @class = "nav-link", @id = "navbarColor01" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Administración</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
